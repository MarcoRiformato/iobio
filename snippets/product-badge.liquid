{%- doc -%}
  Renders product badges based on product tags.
  
  @param {object} product - The product object
  @param {string} [class] - Additional CSS classes
{%- enddoc -%}

{% liquid
  assign badge_type = null
  assign badge_text = null
  
  if product.tags contains 'bestseller' or product.tags contains 'best-seller' or product.tags contains 'best_seller'
    assign badge_type = 'bestseller'
    assign badge_text = 'products.badge.bestseller' | t | default: 'Bestseller'
  elsif product.tags contains 'new'
    assign badge_type = 'new'
    assign badge_text = 'products.badge.new' | t | default: 'New'
  elsif product.tags contains 'edizione-limitata' or product.tags contains 'limited-edition'
    assign badge_type = 'limited'
    assign badge_text = 'products.badge.limited_edition' | t | default: 'Limited Edition'
  endif
-%}

{% if badge_type %}
  <span class="product-badge product-badge--{{ badge_type }}{% if class %} {{ class }}{% endif %}">
    {{ badge_text }}
  </span>
{% endif %}

{% stylesheet %}
  .product-badge {
    display: inline-block;
    font-size: 11px;
    font-weight: 600;
    text-transform: uppercase;
    letter-spacing: 0.5px;
    padding: 4px 8px;
    border-radius: 4px;
    line-height: 1.2;
    color: #000000;
    background-color: rgba(0, 0, 0, 0.05);
    border: 1px solid rgba(0, 0, 0, 0.1);
  }

  .product-badge--bestseller {
    background-color: #ff9800;
    border-color: #f57c00;
    color: #ffffff;
  }

  .product-badge--new {
    background-color: rgba(0, 77, 0, 0.1);
    border-color: rgba(0, 77, 0, 0.2);
    color: #004d00;
  }

  .product-badge--limited {
    background-color: rgba(220, 38, 38, 0.1);
    border-color: rgba(220, 38, 38, 0.2);
    color: #b91c1c;
  }

  @media (max-width: 749px) {
    .product-badge {
      font-size: 10px;
      padding: 3px 6px;
    }
  }
{% endstylesheet %}
