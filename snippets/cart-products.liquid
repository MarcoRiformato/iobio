{% liquid
  assign block_settings = block.settings
%}

<script
  src="{{ 'component-cart-items.js' | asset_url }}"
  type="module"
  fetchpriority="low"
></script>
<script
  src="{{ 'component-cart-quantity-selector.js' | asset_url }}"
  type="module"
  fetchpriority="low"
></script>
<script
  src="{{ 'volume-pricing-info.js' | asset_url }}"
  type="module"
  fetchpriority="low"
></script>


  <div
    {{ block.shopify_attributes }}
    class="cart-items__wrapper"
    {% if settings.product_title_case == 'uppercase' %}
      style="--product-title-case: uppercase;"
    {% endif %}
  >
  {% if cart.empty? %}
    <div class="cart-empty-state">
      <div class="cart-empty-state__icon-wrapper">
        <div class="cart-empty-state__icon">
          <svg width="120" height="120" viewBox="0 0 24 24" fill="none" xmlns="http://www.w3.org/2000/svg">
            <path d="M3 3H5L5.4 5M7 13H17L21 5H5.4M7 13L5.4 5M7 13L4.7 15.3C4.3 15.7 4.6 16.5 5.1 16.5H19M17 21C17.6 21 18 20.6 18 20C18 19.4 17.6 19 17 19C16.4 19 16 19.4 16 20C16 20.6 16.4 21 17 21ZM9 21C9.6 21 10 20.6 10 20C10 19.4 9.6 19 9 19C8.4 19 8 19.4 8 20C8 20.6 8.4 21 9 21Z" stroke="currentColor" stroke-width="1.5" stroke-linecap="round" stroke-linejoin="round"/>
          </svg>
        </div>
      </div>
      <h3 class="cart-empty-state__title">{{ 'content.your_cart_is_empty' | t }}</h3>
      <p class="cart-empty-state__message">
        {{ 'content.cart_empty_message' | t }}
      </p>
      {%- if shop.customer_accounts_enabled and customer == null -%}
        <p class="cart-empty-state__login">
          {{ 'actions.log_in_html' | t: link: routes.account_login_url }}
        </p>
      {%- endif -%}
      <a
        class="button cart-empty-state__button"
        href="{{ settings.empty_cart_button_link | default: routes.all_products_collection_url }}"
      >
        {{ 'actions.continue_shopping' | t | default: 'Continua lo shopping' }}
      </a>
    </div>
  {%- else -%}
    <span
      class="visually-hidden"
      ref="cartItemCount"
      aria-hidden="true"
    >
      {{- cart.item_count -}}
    </span>
    <form
      action="{{ routes.cart_url }}"
      class="cart-form"
      id="cart-form"
      method="post"
    >
      <div
        class="cart-items spacing-style{% if block_settings.dividers %} cart-items--dividers{% endif %}"
        style="{%  render 'spacing-style', settings: block_settings %} --cart-items-gap:{{ block_settings.gap | append: "px" }};"
      >
        <table
          class="cart-items__table"
          role="table"
        >
          <caption
            class="visually-hidden"
            role="caption"
          >
            {{ 'content.cart_total' | t }}
            <span>{{ cart.total_price | money_with_currency }}</span>
          </caption>

          <thead
            class="visually-hidden"
            role="rowgroup"
          >
            <tr
              role="row"
              class="cart-items__table-row"
            >
              <th
                id="productImage"
                scope="col"
                role="columnheader"
              >
                {{ 'content.product_image' | t }}
              </th>
              <th
                id="productInformation"
                scope="col"
                role="columnheader"
              >
                {{ 'content.product_information' | t }}
              </th>
            </tr>
          </thead>

          <tbody role="rowgroup">
            {% for item in cart.items %}
              <tr
                role="row"
                class="cart-items__table-row{% if item.parent_relationship.parent != null %} cart-items__nested-line{% endif %}"
                ref="cartItemRows[]"
                data-parent-key="{{ item.parent_relationship.parent.key }}"
                data-key="{{ item.key }}"
              >
                <td
                  class="cart-items__media"
                  role="cell"
                  headers="productImage"
                >
                  <div class="cart-items__media-wrapper">
                    {% if item.image -%}
                      {% liquid
                        assign ratio = 1
                        assign border_opacity = settings.cart_thumbnail_border_opacity | divided_by: 100.0
                        assign border_override = '--border-width: [cart_thumbnail_border_width]px; --border-style: [cart_thumbnail_border_style]; --border-color: rgb(var(--color-border-rgb) / [cart_thumbnail_border_opacity]); --border-radius: [cart_thumbnail_border_radius]px;' | replace: '[cart_thumbnail_border_width]', settings.cart_thumbnail_border_width | replace: '[cart_thumbnail_border_style]', settings.cart_thumbnail_border | replace: '[cart_thumbnail_border_opacity]', border_opacity | replace: '[cart_thumbnail_border_radius]', settings.cart_thumbnail_border_radius

                        if settings.cart_thumbnail_border_radius > 0
                          assign border_override = border_override | append: ' overflow: hidden;'
                        endif
                        if block_settings.image_ratio == 'portrait'
                          assign ratio = 0.8
                        elsif block_settings.image_ratio == 'adapt'
                          assign ratio = item.image.aspect_ratio
                        endif
                      %}
                      <a
                        href="{{ item.url }}"
                        class="cart-items__media-container"
                        style="--ratio:{{ ratio }};"
                      >
                        {%- liquid
                          echo item.image | image_url: width: 250 | image_tag: class: 'cart-items__media-image border-style', loading: 'lazy'
                        -%}
                      </a>
                    {%- endif %}
                    
                    <div class="cart-items__quantity-controls">
                      {% assign can_update_quantity = item.instructions.can_update_quantity
                        | default: true, allow_false: true
                      %}
                      {% render 'volume-pricing-info',
                        variant: item.variant,
                        unique_id: item.index,
                        quantity: item.quantity
                      %}

                      <div class="cart-items__quantity-actions">
                        {% render 'quantity-selector',
                          product: item.product,
                          variant: item.variant,
                          in_cart_quantity: item.quantity,
                          line_index: item.index,
                          class: 'cart-primary-typography',
                          can_update_quantity: can_update_quantity
                        %}

                        <button
                          class="button button--tertiary cart-items__remove"
                          type="button"
                          aria-label="{{ 'accessibility.remove_item' | t: title: item.title | escape }}"
                          on:click="/onLineItemRemove/{{ item.index | plus: 1 }}"
                          {% assign can_remove = item.instructions.can_remove | default: true, allow_false: true %}
                          {% if can_remove == false %}
                            hidden
                          {% endif %}
                        >
                          {{- 'icon-delete.svg' | inline_asset_content -}}
                          <span class="visually-hidden">{{ 'accessibility.remove' | t }}</span>
                        </button>
                      </div>
                    </div>
                  </div>
                </td>
                <td
                  class="cart-items__details cart-primary-typography"
                  role="cell"
                  headers="productInformation"
                >
                  <div class="cart-items__details-inner">
                    <div class="cart-items__title-wrapper">
                      <p class="cart-items__title-container">
                        <a
                          href="{{ item.url }}"
                          class="cart-items__title"
                          {% if item.parent_relationship.parent != null %}
                            aria-label="{{ 'accessibility.nested_product' | t: product_title: item.product.title, parent_title: item.parent_relationship.parent.title | escape }}"
                          {% endif %}
                        >
                          {{- item.product.title -}}
                        </a>
                      </p>
                    </div>
                    
                    <div class="cart-items__description-placeholder">
                      <span class="cart-items__description-text">Product description placeholder</span>
                    </div>
                    
                    <div class="cart-items__price-wrapper">
                      <div class="cart-items__price-inner">
                        {%- liquid
                          if settings.currency_code_enabled_cart_items
                            assign price = item.final_line_price | money_with_currency
                            assign unit_price = item.unit_price | money_with_currency
                          else
                            assign price = item.final_line_price | money
                            assign unit_price = item.unit_price | money
                          endif
                        -%}
                        <text-component value="{{ price | strip_html }}" class="cart-items__price cart-secondary-typography">{{ price }}</text-component>
                        <div class="cart-items__badges">
                          {% render 'product-badge', product: item.product %}
                        </div>
                      </div>
                      {%- if item.unit_price_measurement -%}
                        <div class="cart-items__price-unit cart-secondary-typography">
                          {% render 'unit-price', price: unit_price, measurement: item.unit_price_measurement %}
                        </div>
                      {%- endif -%}
                    </div>

                    {%- comment -%} Stock counter {%- endcomment -%}
                    {%- liquid
                      assign variant = item.variant
                      assign product_variant = item.product.variants | where: 'id', variant.id | first
                      assign inventory_managed = false
                      
                      # Check if inventory is managed - try variant first, then product variant
                      if variant.inventory_management == 'shopify'
                        assign inventory_managed = true
                      elsif product_variant.inventory_management == 'shopify'
                        assign inventory_managed = true
                      elsif variant.inventory_item_id != blank
                        assign inventory_managed = true
                      endif
                      
                      # Get inventory quantity - try multiple methods
                      assign inventory_quantity = variant.inventory_quantity
                      if inventory_quantity == blank or inventory_quantity == 0
                        assign inventory_quantity = product_variant.inventory_quantity | default: variant.quantity_available | default: 0
                      endif
                      
                      assign inventory_policy = variant.inventory_policy | default: product_variant.inventory_policy | default: 'deny'
                      assign threshold = 10
                      assign show_stock = false
                      assign stock_status = null
                      assign stock_text = null
                      
                      # Always show if inventory is managed and we have a quantity (for testing, remove this later)
                      # For now, let's always try to show if we have any inventory data
                      if inventory_managed
                        if inventory_quantity > 0
                          if inventory_quantity <= threshold
                            assign show_stock = true
                            assign stock_status = 'low'
                            capture stock_text
                              echo 'cart.stock.low_stock' | t: count: inventory_quantity
                            endcapture
                            if stock_text == blank or stock_text contains 'cart.stock'
                              assign stock_text = 'Only ' | append: inventory_quantity | append: ' left'
                            endif
                          endif
                        else
                          if inventory_policy == 'deny'
                            assign show_stock = true
                            assign stock_status = 'out'
                            assign stock_text = 'cart.stock.out_of_stock' | t
                            if stock_text == blank or stock_text contains 'cart.stock'
                              assign stock_text = 'Out of stock'
                            endif
                          endif
                        endif
                      endif
                      
                    -%}
                    {%- if show_stock -%}
                      <div class="cart-items__stock cart-items__stock--{{ stock_status }}" style="display: flex !important; visibility: visible !important; color: #dc2626 !important;">
                        <span class="cart-items__stock-icon" style="color: #dc2626 !important;">
                          <svg width="14" height="14" viewBox="0 0 14 14" fill="none" xmlns="http://www.w3.org/2000/svg">
                            <circle cx="7" cy="7" r="6" stroke="currentColor" stroke-width="1.5" fill="none" opacity="0.3"/>
                            <circle cx="7" cy="7" r="3" fill="currentColor"/>
                          </svg>
                        </span>
                        <span class="cart-items__stock-text" style="color: #dc2626 !important;">{{ stock_text }}</span>
                      </div>
                    {%- endif -%}

                    {% if item.product.vendor and block_settings.vendor %}
                      <p class="cart-items__vendor">
                        {{ item.product.vendor }}
                      </p>
                    {% endif %}

                    {%- if item.item_components.size != 0 -%}
                      <ul class="cart-items__bundle list-unstyled">
                        {%- for component in item.item_components -%}
                          <li>
                            {{- component.title -}}
                            {%- if component.quantity > 1 -%}
                              <span> Ã— {{ component.quantity }}</span>
                            {%- endif -%}
                          </li>
                        {%- endfor -%}
                      </ul>
                    {%- endif -%}

                    {%- if item.product.has_only_default_variant == false
                      or item.properties.size != 0
                      or item.selling_plan_allocation != null
                    -%}
                      <div class="cart-items__variants-wrapper">
                        <dl class="cart-items__variants">
                          {%- if item.product.has_only_default_variant == false and item.item_components.size == 0 -%}
                            {%- for option in item.options_with_values -%}
                              <div class="cart-items__variant">
                                <dt class="cart-items__variant-label">{{ option.name }}:</dt>
                                <dd class="cart-items__variant-value">
                                  {{- option.value -}}
                                </dd>
                              </div>
                            {%- endfor -%}
                          {%- endif -%}

                          {%- for property in item.properties -%}
                            {%- assign property_first_char = property.first | slice: 0 -%}
                            {%- if property.last != blank and property_first_char != '_' -%}
                              <div class="cart-items__properties">
                                <dt class="cart-items__property-label">{{ property.first }}:</dt>
                                <dd class="cart-items__property-value">
                                  {%- if property.last contains '/uploads/' -%}
                                    <a href="{{ property.last }}">{{ property.last | split: '/' | last }}</a>
                                  {%- else -%}
                                    {{ property.last }}
                                  {%- endif -%}
                                </dd>
                              </div>
                            {%- endif -%}
                          {%- endfor -%}
                        </dl>

                        {% if item.selling_plan_allocation %}
                          <p class="cart-items__selling-plan">{{ item.selling_plan_allocation.selling_plan.name }}</p>
                        {% endif %}
                      </div>
                    {%- endif -%}

                    {%- comment -%} Bundle suggestion {%- endcomment -%}
                    {% render 'bundle-suggestion', product: item.product, item: item %}

                    {% if item.line_level_discount_allocations.size > 0 %}
                      <ul
                        class="cart-items__discounts list-unstyled"
                        role="list"
                      >
                        {%- for discount in item.line_level_discount_allocations -%}
                          <li>{{ discount.discount_application.title | escape }}</li>
                        {%- endfor -%}
                      </ul>
                    {% endif %}
                  </div>
                </td>
                <td
                  class="cart-items__error hidden"
                  role="cell"
                  ref="cartItemErrorContainer-{{ item.index | plus: 1 }}"
                  headers="quantity"
                >
                  <div
                    class="cart-item__error"
                    role="alert"
                  >
                    <span class="svg-wrapper">
                      {{- 'icon-error.svg' | inline_asset_content -}}
                    </span>
                    <small
                      class="cart-item__error-text cart-primary-typography"
                      ref="cartItemError-{{ item.index | plus: 1 }}"
                    ></small>
                  </div>
                </td>
              </tr>
            {% endfor %}
          </tbody>
        </table>
      </div>
    </form>
  {%- endif -%}
</div>

{% stylesheet %}
  .cart-items {
    --cart-item-media-width-min: 2.5rem;
    --cart-item-media-width-max: 7.5rem;

    container-name: cart-items;
    container-type: inline-size;
    width: 100%;
  }

  .cart-items-disabled {
    pointer-events: none;
  }

  .cart-items__table {
    width: 100%;
    max-width: 100%;
    border-spacing: 0;
    overflow: visible;
    box-sizing: border-box;
    table-layout: auto;
  }

  .cart-items__table * {
    margin: 0;
  }
  
  .cart-items__wrapper {
    overflow: visible;
    width: 100%;
    max-width: 100%;
    box-sizing: border-box;
  }

  .cart-items__table-row {
    display: grid;
    grid-template-columns: 80px 1fr;
    grid-template-areas:
      'media details'
      'media error';
    column-gap: 12px;
    row-gap: 4px;
    align-items: start;
    padding: 8px 12px 2px 12px;
    margin-bottom: 12px;
    border: 1px solid rgba(0, 0, 0, 0.08);
    border-radius: 8px;
    background-color: #ffffff;
    transition: all 0.3s cubic-bezier(0.4, 0, 0.2, 1);
    box-shadow: 0 2px 8px rgba(0, 0, 0, 0.04), 0 1px 2px rgba(0, 0, 0, 0.02);
    position: relative;
    overflow: visible;
    min-height: auto;
    max-width: 100%;
    width: 100%;
    box-sizing: border-box;
  }
  
  .cart-items__table-row::before {
    content: '';
    position: absolute;
    top: 0;
    left: 0;
    right: 0;
    height: 3px;
    background: linear-gradient(90deg, #004d00 0%, #00aa00 100%);
    border-radius: 12px 12px 0 0;
    opacity: 0.6;
    transition: opacity 0.3s ease;
  }
  
  .cart-items__table-row:hover {
    box-shadow: 0 8px 24px rgba(0, 0, 0, 0.08), 0 2px 4px rgba(0, 0, 0, 0.04);
    transform: translateY(-2px);
    border-color: rgba(0, 77, 0, 0.2);
  }
  
  .cart-items__table-row:hover::before {
    opacity: 1;
  }
  

  .cart-items__table-row.cart-items__nested-line td:first-child {
    width: 60%;
    justify-self: right;
  }

  html:active-view-transition-type(page-navigation) .cart-items__table-row {
    /* stylelint-disable-next-line declaration-no-important */
    view-transition-name: none !important;
  }

  .cart-items__table-row.removing {
    overflow: hidden;
    animation: removeRow calc(var(--animation-speed) * 2) var(--animation-easing) forwards;
    animation-delay: var(--animation-speed);
  }

  @keyframes removeRow {
    0% {
      height: var(--row-height);
    }

    100% {
      opacity: 0;
      height: 0;
      padding-bottom: 0;
      margin-bottom: 0;
      border-color: transparent;
    }
  }

  .cart-items__table-row:last-child {
    padding-bottom: 0;
  }

  .cart-empty-state {
    display: flex;
    flex-direction: column;
    align-items: center;
    justify-content: center;
    text-align: center;
    padding: 60px 40px;
    gap: 24px;
    min-height: 400px;
    background: linear-gradient(to bottom, #ffffff 0%, #fafafa 100%);
    border-radius: 12px;
    margin: 20px 0;
  }

  .cart-empty-state__icon-wrapper {
    position: relative;
    margin-bottom: 8px;
  }

  .cart-empty-state__icon {
    width: 140px;
    height: 140px;
    color: #004d00;
    margin-bottom: 0;
    opacity: 1;
    display: flex;
    align-items: center;
    justify-content: center;
    background-color: rgba(0, 77, 0, 0.05);
    border-radius: 50%;
    padding: 20px;
    border: 2px dashed rgba(0, 77, 0, 0.2);
  }

  .cart-empty-state__icon svg {
    width: 100%;
    height: 100%;
  }

  .cart-empty-state__title {
    font-size: 28px;
    font-weight: 700;
    color: #000000;
    margin: 0 0 8px 0;
    letter-spacing: -0.5px;
  }

  .cart-empty-state__message {
    font-size: 16px;
    color: rgba(0, 0, 0, 0.7);
    margin: 0 0 8px 0;
    max-width: 450px;
    line-height: 1.6;
  }

  .cart-empty-state__login {
    font-size: 15px;
    color: rgba(0, 0, 0, 0.65);
    margin: 12px 0 0 0;
    line-height: 1.6;
  }

  .cart-empty-state__login a {
    color: #000000;
    text-decoration: underline;
    font-weight: 600;
    transition: opacity 0.2s ease;
  }
  
  .cart-empty-state__login a:hover {
    opacity: 0.7;
  }

  .cart-empty-state__button {
    margin-top: 24px;
    min-width: 220px;
    transition: all 0.3s ease;
    color: #000000;
    background-color: transparent;
    border: 2px solid #000000;
    padding: 16px 32px;
    font-size: 16px;
    font-weight: 600;
    border-radius: 6px;
    text-decoration: none;
    display: inline-block;
  }

  .cart-empty-state__button:hover {
    background-color: #000000;
    color: #ffffff;
    transform: translateY(-2px);
    box-shadow: 0 6px 16px rgba(0, 0, 0, 0.2);
    border-color: #000000;
  }
  
  .cart-empty-state__button:active {
    transform: translateY(0);
    box-shadow: 0 2px 8px rgba(0, 0, 0, 0.15);
  }

  .cart-empty-state__button:focus-visible {
    outline: 2px solid #000000;
    outline-offset: 2px;
  }

  .cart-items--dividers .cart-items__table-row {
    border-bottom: none;
    margin-bottom: 16px;
  }

  .cart-items--dividers .cart-items__table-row:has(+ .cart-items__nested-line) {
    border-bottom: none;
    margin-bottom: 16px;
  }

  .cart-items--dividers .cart-items__table-row:last-child {
    border-block-end: none;
    padding-block-end: 0;
    margin-bottom: 0;
  }

  .cart-items__details {
    grid-area: details;
    padding: 0;
    padding-bottom: 0;
    display: flex;
    flex-direction: column;
    min-height: 100%;
    flex: 1;
    gap: 2px;
  }
  
  .cart-items__details > *:last-child {
    margin-bottom: 0;
    padding-bottom: 0;
  }

  .cart-items__details-inner {
    display: flex;
    flex-direction: column;
    gap: 2px;
    width: 100%;
  }

  .cart-items__title-wrapper {
    margin: 0;
    padding: 0;
    order: 1;
  }

  .cart-items__title-container {
    margin: 0;
    padding: 0;
  }

  .cart-items__price-wrapper {
    position: relative;
  }

  .cart-items__price-inner {
    display: flex;
    flex-direction: row;
    align-items: center;
    justify-content: space-between;
    gap: 8px;
    flex-wrap: nowrap;
    width: 100%;
  }

  .cart-items__price-inner .cart-items__price {
    flex: 0 0 auto;
    margin-right: auto;
  }

  .cart-items__badges {
    display: flex;
    flex-wrap: wrap;
    gap: 4px;
    margin: 0;
    padding: 0;
    align-items: center;
  }

  .cart-items__price-inner .cart-items__badges {
    flex: 0 0 auto;
    margin-left: auto;
    margin-top: 0;
  }

  .cart-items__description-placeholder {
    order: 2;
    margin: 0;
    padding: 0;
  }

  .cart-items__description-text {
    font-size: 13px;
    color: rgba(0, 0, 0, 0.6);
    line-height: 1.4;
    display: block;
  }

  .cart-items__price-wrapper {
    margin: 0;
    padding: 0;
    margin-bottom: 0;
    order: 3;
  }

  .cart-items__vendor {
    order: 4;
  }

  .cart-items__variants-wrapper {
    order: 5;
    margin: 4px 0 0 0;
    padding: 0;
  }

  .cart-items__variants {
    margin: 0;
    padding: 0;
    display: flex;
    flex-direction: column;
    gap: 3px;
  }

  .cart-items__bundle {
    order: 6;
  }

  .cart-items__discounts {
    order: 7;
  }

  .cart-items__selling-plan {
    order: 8;
  }

  .cart-items__stock {
    order: 3.2;
    display: flex !important;
    visibility: visible !important;
    opacity: 1 !important;
    align-items: center;
    gap: 6px;
    font-size: 11px;
    margin: 4px 0 0 0;
    padding: 0;
  }

  .bundle-suggestion {
    order: 5.7;
    margin: 6px 0 0 0;
  }

  .cart-items__stock--low {
    color: #dc2626 !important;
  }

  .cart-items__stock--out {
    color: #dc2626 !important;
  }

  .cart-items__stock-icon {
    display: flex !important;
    visibility: visible !important;
    opacity: 1 !important;
    align-items: center;
    justify-content: center;
    width: 14px;
    height: 14px;
    flex-shrink: 0;
    color: #dc2626 !important;
  }

  .cart-items__stock-icon svg {
    width: 100%;
    height: 100%;
    display: block;
    color: #dc2626 !important;
  }

  .cart-items__stock-icon svg circle {
    stroke: #dc2626 !important;
    fill: #dc2626 !important;
  }

  .cart-items__stock-text {
